<Window x:Class="Спартак_Диплом.ClientTableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Спартак_Диплом"
        mc:Ignorable="d"
        Title="ClientTableWindow" Height="360" Width="640" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dataGrid" Margin="10,10,10,5"/>
        <Button x:Name="ButtonAddRecord" Content="Добавить" Margin="0,10,10,0" Grid.Row="1" HorizontalAlignment="Right" Width="86" Height="25" VerticalAlignment="Top" Click="ButtonAddRecord_Click_1"/>
        <Button x:Name="ButtonRewrite" Content="Изменить" Margin="0,10,101,0" Grid.Row="1" HorizontalAlignment="Right" Width="86" Height="25" VerticalAlignment="Top"/>
        <Button x:Name="ButtonDelete" Content="Удалить" Margin="0,10,192,0" Grid.Row="1" HorizontalAlignment="Right" Width="86" Height="25" VerticalAlignment="Top"/>

    </Grid>
</Window>
