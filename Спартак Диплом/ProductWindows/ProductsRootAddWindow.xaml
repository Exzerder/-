<Window x:Class="Спартак_Диплом.ProductsRootAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Спартак_Диплом"
        mc:Ignorable="d"
        Title="ProductsRootAddWindow" Height="120" Width="300">
    <Grid>
        <Button x:Name="ButAdd" Content="Добавить" Margin="0,0,10,10" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="ButAdd_Click"/>
        <Button x:Name="ButCancel" Content="Отмена" Margin="0,0,90,10" Click="ButCancel_Click" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>
        <Label x:Name="label" Content="Введите название:" HorizontalAlignment="Left" Margin="96,10,0,0" VerticalAlignment="Top" Padding="5,0"/>
        <TextBox x:Name="TBxClassName" HorizontalAlignment="Left" Height="23" Margin="96,31,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="186"/>
        <Label x:Name="label_Copy" Content="Введите код:" HorizontalAlignment="Left" Margin="11,10,0,0" VerticalAlignment="Top" Padding="5,0"/>
        <TextBox x:Name="TBxClassCode" HorizontalAlignment="Left" Height="23" Margin="11,31,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="80"/>

    </Grid>
</Window>
